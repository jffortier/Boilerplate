#
# Coding Standards
# http://editorconfig.org/
#

# declare as top-level config file. remove if added to a subproject.
root = true

# global file settings.
[*]
end_of_line = lf
indent_style = tab
indent_size = 4
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
insert_final_newline = false
